<!DOCTYPE web-app PUBLIC '-//Sun Microsystems, Inc.//DTD Web
     Application 2.3//EN' 'http://java.sun.com/dtd/web-app_2_3.dtd'>

<web-app>
    <servlet>
        <servlet-name>car</servlet-name>
        <servlet-class>org.example.CarServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>car</servlet-name>
        <url-pattern>/garage</url-pattern>
    </servlet-mapping>
    <filter>
        <filter-name>headers</filter-name>
        <filter-class>org.example.HeadersFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>headers</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
<listener>
    <listener-class>org.example.LogListener</listener-class>
</listener>

</web-app>